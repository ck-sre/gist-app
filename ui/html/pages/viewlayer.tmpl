{{ define "title"}}Gist #{{ .TmplGst.ID }}{{end}}
{{ define "main"}}
   {{ with .TmplGst }}
        <div class='gist'>
            <div class='metadata'>
                <strong>{{ .Title }}</strong>
                <span>#{{ .ID }}</span>
            </div>
            <pre>{{ .Content }}</pre>
            <div class='metadata'>
                <span>{{ fmtDate .CreatedOn.Weekday }}</span>
                <time>{{ fmtDate .ExpiresOn.AddDate 0 1 0 }}</time>
            </div>
        </div>
    {{ end }}
{{ end }}